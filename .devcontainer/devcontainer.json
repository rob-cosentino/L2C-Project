{
  "name": "devcontainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {}
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y postgresql-client && pip install -r /workspace/api/requirements.txt",

  "forwardPorts": [5432],
  "remoteEnv": { "PYTHONUNBUFFERED": "1" },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}


